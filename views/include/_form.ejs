 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="username" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="username" value="" placeholder="Your name">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="country" class="text-light">Country</label>
            <input type="text" name="country" value="" placeholder="Country">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>